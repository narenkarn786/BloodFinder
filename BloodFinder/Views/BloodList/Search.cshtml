@model BloodFinder.Models.BloodList
<br /><br />
@using (Html.BeginForm("Search", "BloodList", FormMethod.Post))
{
      <div class="form-group">
          <label><b> Address:</b></label>
          @Html.EditorFor(m => m.Address, new { htmlAttributes = new { @class = "form-control" } })
      </div>

      <div class="form-group">
          <label><b>Blood Group:</b></label><br />
          @Html.DropDownListFor(m => m.Bloodgroup, new SelectList(ViewBag.BloodLists), "* Select Blood Group *")
          </div>

          <div class="form-group">
              <button type="button" class="btn btn-success"><a href="#" class="text-white"><b>Search</b></a></button>
          </div>
          }
